include ../partials/section-heading

- const featuresData = require("data/featuresData.json");

- const featuresSection = `container-custom grid md:grid-cols-[1.5fr,2fr] items-start`;

- const featureContainer = `flex items-center gap-4 px-4 py-6 lg:gap-12 lg:p-12 border-t-2 border-blackish/15`;

- const featureSpan = `font-accent text-3xl lg:text-5xl min-w-8 lg:min-w-12`;

- const featureDividerContainer = `w-[2px] h-32 bg-blackish/15 relative overflow-hidden shrink-0`;

- const featureDivider = `w-full h-1/2 bg-blackish -translate-y-full`;

- const featureText = `space-y-2 lg:space-y-4`;

- const featureHeading = `font-extrabold text-xl lg:text-2xl`;

section#features(class=featuresSection)
  #features-heading
    +section-heading('Our reasons for being <br /> your best choice')

  div#features-right
    each feature, index in featuresData 
      div(class=featureContainer, data-feature)
        span(class=featureSpan)= `${"0" + (index + 1)}`

        div(class=featureDividerContainer)
          div(class=featureDivider, data-feature-divider)

        div(class=featureText)
          h3(class=featureHeading)= feature.title
          p= feature.description
