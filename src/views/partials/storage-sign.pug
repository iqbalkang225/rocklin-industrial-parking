//- storage sign container
div(class=signContainer)#storage-sign
  //- storage sign upper
  div(class=signOuterBox)
    div(class=signInnerBox)
      span Storage <br/> Area
      div(class=signSVGContainer)
        svg#arrow1.h-full(viewBox="0 0 124 108")
          path(
            d="M10.7948 97.6354L113.766 20.0414M113.766 20.0414L104.249 87.7532M113.766 20.0414L46.0538 10.5251",
            stroke-width="20",
            stroke-linecap="round",
            stroke-linejoin="round"
          )
        svg#arrow2.h-full.absolute.top-0.left-0(viewBox="0 0 124 108")
          path(
            d="M10.7948 97.6354L113.766 20.0414M113.766 20.0414L104.249 87.7532M113.766 20.0414L46.0538 10.5251",
            stroke-width="20",
            stroke-linecap="round",
            stroke-linejoin="round"
          )

  //- storage sign base
  .h-3(class=signBase)

  //- storage sign lower
  div(class=signOuterBox)
    .text-center(class=signInnerBox)
      div(class=milesContainer)
        span#miles 50
        span Miles

  //- storage sign base
  div(class=signBase + " h-24 md:h-48")
