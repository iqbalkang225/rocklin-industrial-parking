- const signOuterBox = `bg-accent p-2 rounded-3xl w-full`;

- const signInnerBox = `border-blackish border rounded-2xl p-3 md:p-4 lg:p-6 relative`;

- const signSVGContainer = `h-11 absolute right-8 top-4 md:h-14 lg:h-20 stroke-blackish overflow-hidden`;

